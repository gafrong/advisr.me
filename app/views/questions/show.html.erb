<script>
  $('.star-rating').raty({
    path: 'https://s3-ap-southeast-2.amazonaws.com/advisr/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });

  $('.starratings').raty({
    path: 'https://s3-ap-southeast-2.amazonaws.com/advisr/stars',
    scoreName: 'comment[rating]'
  });
</script>





