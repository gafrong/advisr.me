<h1>Problem</h1>

<h3><%= @question.content %></h3>

<!-- Form to answer -->
<%= form_for @answer do |f| %>  
  <p>
    <%= f.label :advise %>
    <%= f.text_area :advise %>  
  </p>
  
  <%= f.hidden_field :question_id, :value => @question.id %>
  <button>Go</button>
<% end %>

<!-- Iterates all the answers to the question-->
<% @question.answers.each do |answer| %>
  <p><%= answer.advise %></p>
<% end %>