<%= form_for @answer do |f| %>  

  <p>
    <%= f.text_area :advise, class: "form-control", placeholder: "Submit your advice here. Be nice...", cols: "30", rows: "7" %>  
  </p>
  
  <%= f.hidden_field :question_id, :value => @question.id %>
  <button class="btn btn-primary btn-lg">advise</button>
<% end %>


  
